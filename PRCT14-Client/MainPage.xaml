<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PRCT14_Client.MainPage"
             Title="Колледж">

    <StackLayout Padding="10">
        <Label Text="Учебная нагрузка" FontSize="20" HorizontalTextAlignment="Center"/>
        <ListView x:Name="lvAcademicLoads" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding AcademLoadCode}" HorizontalOptions="Center"/>
                            <Label Text="{Binding TeacherSurname, StringFormat='Преподаватель: {0}'}" HorizontalOptions="Center"/>
                            <Label Text="{Binding DisciplineName, StringFormat='Дисциплина: {0}'}" HorizontalOptions="Center"/>
                            <Label Text="{Binding Group, StringFormat='Группа: {0}'}" HorizontalOptions="Center"/>
                            <Label Text="{Binding Semester, StringFormat='Семестр: {0}'}" HorizontalOptions="Center"/>
                            <Label Text="{Binding NumberOfHours, StringFormat='Часов: {0}'}" HorizontalOptions="Center"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Добавить запись" Clicked="btnAddAcademicLoad_Clicked" Margin="10, 10"/>
        <Button Text="Редактировать запись" Clicked="btnEditAcademicLoad_Clicked" Margin="10, 10"/>
        <Button Text="Удалить запись" Clicked="btnDeleteAcademicLoad_Clicked" Margin="10, 10"/>
        <Button Text="Преподаватели" Clicked="btnTeachers_Clicked" Margin="10, 10"/>
    </StackLayout>
</ContentPage>